<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :salutation %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :mobile %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :postcode %>
    <%= f.input :state %>
    <%= f.input :special_requests %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
